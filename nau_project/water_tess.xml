<?xml version="1.0" ?>
<project name="Geometry Shader - Pass Through" width=512 height=512>
	<assets>
		<attributes>
			<attribute name="scale" data="FLOAT" type="RENDERER" value=1 />
			<attribute name="water_level" data="FLOAT" type="RENDERER" value=0.1 />
			<attribute name="tesselation" data="INT" type="RENDERER" value=500 />
			<attribute name="width" data="FLOAT" type="RENDERER" value=10 />

			<attribute name="level" data="FLOAT" type="RENDERER" value=100 />
		</attributes>
		<scenes>
			<scene name="skybox" >
				<SCALE x=200 y=200 z=200 />
				<file name="models/skybox.obj"/>
			</scene>

			<scene name="water" >
				<buffers name="water" primitive="POINTS" material="water" >
					<position name="water_point" fromLibrary="terrain_shaders" />
				</buffers>
			</scene>

			<scene name="Square" type="OctreeByMat">
				<file  name="models/square.patch"/>
				<TRANSLATE x = -1.5 y = 0 z = 0 />
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<!--<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=1 FAR=100.0 />
				<POSITION x=0 y=0.0 z=5 />
				<VIEW x=0.0 y=0.0 z=-1.0 />
				<UP x=0 y=1 z=0 />
				-->
				<viewport name="MainViewport" />
				<POSITION x=0 y=2 z=0 />
				<VIEW x=-1.0 y=-1.7 z=1.0 />
				<UP x=0 y=1 z=0 />
				<NEAR value=0.1 />
				<FAR value=500 />
				
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=-2 y=-1 z=-2 />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="water_tess.mlib"/>
		</materialLibs>
	</assets>
	
	
	<pipelines>
		<pipeline name="p1" default="true">

			<!--
			<pass class="default" name="pass_water">

				<scenes instances = 250000>
					<scene name="water" />
				</scenes>

				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*"  toMaterial="water" toLibrary="terrain_shaders" />
				</materialMaps>
			</pass>-->

			<pass class="default" name="passQuad">
				<scenes>
					<scene name="Square" />
				</scenes>
				<camera name="MainCamera" />
				<materialMaps>
					<map fromMaterial="*" toLibrary="water_shaders" toMaterial="water" />
				</materialMaps>
				
			</pass>
			<!--
			<pass class="default" name="pass_terrain">

				<scenes instances = 250000>
					<scene name="terrain" />
				</scenes>

				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*"  toMaterial="terrain" toLibrary="terrain_shaders" />
				</materialMaps>
			</pass>
			-->
			
			<!--
			<pass class="default" name="pass_skybox">
				<scenes instances = 1>
					<scene name="skybox" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass>
			-->
					
		</pipeline>
		
	</pipelines>

	<interface>
		
		<window label="settings" >
			<var label="level" type="RENDERER" context="CURRENT" component="level" 
				def="min=1 max=100 step=1"/>
			
			<var label="scale" type="RENDERER" context="CURRENT" 
					component="scale" def="min=0 max=100 step=0.05" />

			<var label="water level" type="RENDERER" context="CURRENT" 
					component="water_level" def="min=0 max=5 step=0.02" />
			
			<!--
			<var label="width" type="RENDERER" context="CURRENT" 
					component="width" def="min=0 max=100 step=0.05" />
			-->
			<!--
			<var label="tesselation" type="RENDERER" context="CURRENT" 
					component="tesselation" def="min=0 max=1000 step=1" />
			-->
		</window>
		
	</interface>
</project>